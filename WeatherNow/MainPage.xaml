<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherNow.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button Text="My Location" Clicked="Button_Clicked_Location"/>
            <Label x:Name="lbl_coords" />

            <Entry x:Name="txt_city"/>
            <Button Text="Search Forecast" Clicked="Button_Clicked_Forecast"/>

            <Label x:Name="lbl_res"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
